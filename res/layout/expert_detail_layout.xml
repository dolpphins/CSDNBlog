<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:background="#148af7">
        <TextView
            android:id="@+id/expert_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expert_detail"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18sp" />
        <ImageView 
           android:id="@+id/expert_detail_show_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="15dip"
           android:background="@drawable/icon_personality_nor"/>
   	</RelativeLayout>
   	<FrameLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent">
        <FrameLayout 
            android:layout_width="match_parent"
   	    	android:layout_height="match_parent">
            <ListView 
		   	    android:id="@+id/expert_article_listview"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="match_parent"/>
            <TextView
		        android:id="@+id/expert_detail_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/loading"
		        android:layout_gravity="center"
		        android:visibility="gone"/>
        </FrameLayout>
        <RelativeLayout 
            android:id="@+id/expert_detail_sidelayout"
            android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:visibility="gone">
            <LinearLayout 
	            android:layout_alignParentRight="true"
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="match_parent"
	   	        android:orientation="vertical"
	   	        android:background="#ffffff"
	   	        android:padding="20dip">
	   	        <ImageView 
	   	            android:id="@+id/expert_detail_headpicture"
	   	            android:layout_width="96dip"
	   	            android:layout_height="96dip"
	   	            android:background="@drawable/csdn"
	   	            android:layout_margin="10dip"
	   	            android:layout_gravity="center"/>
	   	        	<TextView 
	   	            android:id="@+id/expert_detail_name"
	 	            android:layout_width="wrap_content"
	 	            android:layout_height="wrap_content"
	 	            android:layout_gravity="center"/>
	   	            <TextView 
	   	                android:id="@+id/expert_detail_pageview"
	   	                android:layout_width="wrap_content"
	   	                android:layout_height="wrap_content"
	   	                android:padding="5dip"/>
	   	            <TextView 
	   	                android:id="@+id/expert_detail_score"
	   	                android:layout_width="wrap_content"
	   	                android:layout_height="wrap_content"
	   	                android:padding="5dip"/>
		   	        <LinearLayout
		   	            android:layout_width="wrap_content"
		   	            android:layout_height="wrap_content"
		   	            android:orientation="horizontal"
		   	            android:padding="5dip">
		   	            <TextView 
		   	                android:id="@+id/expert_detail_rank"
		   	                android:layout_width="wrap_content"
		   	                android:layout_height="wrap_content"
		   	                android:layout_marginRight="5dip"/>
		   	            <TextView 
		   	                android:id="@+id/expert_detail_original"
		   	                android:layout_width="wrap_content"
		   	                android:layout_height="wrap_content"/>
		   	        </LinearLayout>
		   	        <LinearLayout
		   	            android:layout_width="wrap_content"
		   	            android:layout_height="wrap_content"
		   	            android:orientation="horizontal"
		   	            android:padding="5dip">
		   	            <TextView 
		   	                android:id="@+id/expert_detail_transshipment"
		   	                android:layout_width="wrap_content"
		   	                android:layout_height="wrap_content"
		   	                android:layout_marginRight="5dip"/>
		   	            <TextView 
		   	                android:id="@+id/expert_detail_translation"
		   	                android:layout_width="wrap_content"
		   	                android:layout_height="wrap_content"/>
		   	        </LinearLayout>
	   	    	</LinearLayout>
        </RelativeLayout>
   	</FrameLayout>
   	
</LinearLayout>
